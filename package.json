{
  "name": "explorer-backend",
  "version": "0.1.0",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "build": "tsc",
    "start": "bun run dist/index.js",

    "db:init": "prisma init",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "bun run src/commands/seed.ts",
    "db:reset": "prisma migrate reset --force && bun run db:seed",

    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:int": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "prisma": "^6.14.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@prisma/client": "^6.14.0",
    "elysia": "^1.3.11",
    "elysia-helmet": "^3.0.0",
    "zod": "^4.0.17"
  }
}
